#!/bin/bash

tree -a \
  -I 'node_modules|dist|.git' \
  --prune

echo
echo "================ FILE CONTENTS ================"
echo

# 2️⃣ Show file contents (skip same dirs + .env*)
find . \
  \( -type d \( -name node_modules -o -name dist -o -name .git \) -prune \) -o \
  \( -type f ! -name ".env*" \
     -exec echo '==== {} ====' \; \
     -exec cat {} \; \
  \)
